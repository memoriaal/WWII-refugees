extends /_templates/html.pug

block body

    include /_templates/navigation.pug
    include /_templates/formNewPerson.pug
    include /_templates/formFeedback.pug

    include /_templates/search_result.pug

    include /_templates/alerts.pug

    .sisu.w3-container#artikkel 
        div.w3-panel.w3-display-container
            h1= self.title

        .w3-hide#intro
            .w3-text= self.subtitle
            each item in self.mainlist
                li= item
            each paragraph in self.texts
                p= paragraph
        
        .w3-row

        if self.message
            h5.note= self.message
        form.w3-row#searchform
            div.search-input-wrapper
                input.w3-input.w3-round#search.search-input.search-input--general-search(
                    type='search', 
                    name='q',
                    placeholder= self.search.placeholder,
                    enabled
                )
                div.detail-search-inputs-wrapper
                    input.w3-input.w3-round.search-firstname.search-input.search-input--detail-search(
                        type='search', 
                        name='firstname',
                        placeholder= self.search.placeholderFirstname
                    )
                    input.w3-input.w3-round.search-lastname.search-input.search-input--detail-search(
                        type='search', 
                        name='lastname',
                        placeholder= self.search.placeholderLastname
                    )
                    input.w3-input.w3-round.search-mothers-firstname.search-input.search-input--detail-search(
                        type='search', 
                        name='mothersFirstname',
                        placeholder= self.search.placeholderMothersFirstname
                    )
                    //-input.w3-input.w3-round.search-mothers-lastname.search-input.search-input--detail-search(
                        type='search', 
                        name='mothersLastname',
                        placeholder= self.search.placeholderMothersLastname
                    //-)
                    input.w3-input.w3-round.search-fathers-firstname.search-input.search-input--detail-search(
                        type='search', 
                        name='fathersFirstname',
                        placeholder= self.search.placeholderFathersFirstname
                    )
                    //-input.w3-input.w3-round.search-fathers-lastname.search-input.search-input--detail-search(
                        type='search', 
                        name='fathersLastname',
                        placeholder= self.search.placeholderFathersLastname
                    //-)
                    input.w3-input.w3-round.search-birthplace.search-input.search-input--detail-search(
                        type='search', 
                        name='birthplace',
                        placeholder= self.search.placeholderBirthplace
                    )
                    input.w3-input.w3-round.search-place-of-residence.search-input.search-input--detail-search(
                        type='search', 
                        name='placeOfResidence',
                        placeholder= self.search.placeholderPlaceOfResidence
                    )
                    input.w3-input.w3-round.search-place-of-death.search-input.search-input--detail-search(
                        type='search', 
                        name='placeOfDeath',
                        placeholder= self.search.placeholderPlaceOfDeath
                    )
                    div.year-filter-wrapper
                        div.year-filter-inputs-wrapper
                            input.w3-input.w3-round.year-filter-input.birthyear-from.search-input--detail-search(
                                type="number",
                                name="birthYearFrom",
                                min="1850",
                                max="2050",
                                placeholder= self.search.placeholderBirthYearFrom
                            ) 
                            input.w3-input.w3-round.year-filter-input.birthyear-to.search-input--detail-search(
                                type="number",
                                name="birthYearTo",
                                min="1850",
                                max="2050",
                                placeholder= self.search.placeholderBirthYearTo
                            ) 
                        div.year-filter-inputs-wrapper
                            input.w3-input.w3-round.year-filter-input.deathyear-from.search-input--detail-search(
                                type="number",
                                name="deathYearFrom",
                                min="1850",
                                max="2050",
                                placeholder= self.search.placeholderDeathYearFrom
                            ) 
                            input.w3-input.w3-round.year-filter-input.deathyear-to.search-input--detail-search(
                                type="number",
                                name="deathYearTo",
                                min="1850",
                                max="2050",
                                placeholder= self.search.placeholderDeathYearTo
                            ) 
            div.search-buttons-wrapper
                button.search-form-button#searchButton(enabled)= self.search.button
                button.search-form-button.more-fields-button(enabled style="display:none")= self.search.buttonDetailSearch
                button.search-form-button#newPersonLink(
                    enabled,
                    onclick="document.getElementById('newPersonFormRoot').style.display='block'"
                    )= self.newPersonForm.linkText     

        #tulemused
            .w3-text#search-count= ""
            #search-results
