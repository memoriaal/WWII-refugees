#searchform
    display flex
    flex-direction row
    @media screen and (max-width: 992px)
        flex-direction column
    input, .search-form-button
        // margin-bottom 15px
    input
        border-top-right-radius 0em
        border-bottom-right-radius 0em
    button, .button
        border-radius 0em
        text-align center
    #searchButton
        border-top-right-radius 0.5em
    #newPersonLink
        border-bottom-left-radius 0.5em
        border-bottom-right-radius 0.5em
        border-top 1px solid var(--wwii-taust2)
    .search-form-button
        display flex
        align-items center
        justify-content center 
        width 100%
        min-width 100px
        min-height 40px
        height auto
    .search-input-wrapper, .search-buttons-wrapper
        min-width 200px
        width 100%
    .search-buttons-wrapper
        display flex
        flex-direction column
    .more-fields-button 
        border-top 1px solid var(--wwii-taust2)
    .detail-search-inputs-wrapper
        display none
    .year-filter-wrapper
        display flex
        flex-direction column
        .year-filter-inputs-wrapper
            display flex
            flex-direction row
            gap 10px
            .year-filter-input-wrapper
                display flex
                width 100%
                flex-direction column
                justify-content flex-end 

.pagination-wrapper
    display none
    width 100%
    height auto
    flex-direction row
    justify-content center
    width fit-content
    margin 0 auto;
    background-color var(--wwii-taust3)
    .pagination-button
        padding 0 10px
        text-decoration none

button, .button
    background-color var(--wwii-taust3)
    cursor pointer
    border none

button:hover, .pagination-button:hover, .pagination-current-page
    background-color var(--wwii-taust2)
#tulemused
    margin-top 2em

#search-results
    margin-bottom 1em
    // linear-gradient(hsla(0, 0%, 0%, 0), var(--wwii-tekst-transparent))

.search-result
    background-color var(--wwii-taust2)
    border-top-left-radius 0.5em
    border-top-right-radius 0.5em
    .search-result-name
        font-size 1.5em
        font-weight bold
        margin 0.25em 0em 0em 0em
        padding 0.5em
        text-decoration none
        border-top 0.25em solid var(--wwii-aktiivne)
    .search-result-main
        padding-left 0.5em
        background-color var(--wwii-taust2)
        text-decoration none
    .search-result-info
        padding-left 0.5em
        background-color var(--wwii-valge)
        text-decoration none
    p
        margin 0em
        padding 0em 0em 0em 1em
        padding-block-start 0.25em 
        font-size 1em
        font-weight 300
        line-height 1.5em
        background-color var(--wwii-taust2)
    button
        border-radius 0.5em
        border-bottom-right-radius 0em
    .record-label
        font-weight bolder
        margin-top -0.5em
        margin-bottom -0.5em
    .record-link
        padding-left 1.5em
        background left no-repeat
        background-image url(//ssl.gstatic.com/ui/v1/icons/mail/gm3/1x/link_baseline_nv700_20dp.png)
    #result-records
        margin-left 0.5em
    .result-record
        margin-left 0.1em
        margin-top 1em
        margin-bottom 1em
        padding-left 0.5em
        border-left 1px solid var(--wwii-taust2)
    .family-member
        .code
            padding-right 1em
            font-weight 600
    .search-result-plaque
        margin-top 1em
        margin-bottom 1e
        padding-left 0.5em
        margin-left -0.75em
        border-left 0.5em solid var(--wwii-aktiivne)

